{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended"
    ],
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-console": ["error", { "allow" : ["error"] }]
    },
    "ignorePatterns": ["src/__tests__", "tools", "tasks", "src/auto_gen"]
}
